{
	"private": true,
	"type": "module",
	"scripts": {
		"knip": "bunx knip",
		"format": "biome check --unsafe --write ./app/**/*.{ts,tsx,js,jsx,json,jsonc}",
		"dev": "react-router dev",
		"build": "react-router build",
		"build:production": "vite build --mode production",
		"build:staging": "vite build --mode staging",
		"preview": "bun run build && vite preview",
		"deploy": "bun run build && wrangler deploy",
		"deploy:production": "bun run build:production && wrangler deploy --config build/server/wrangler.json",
		"deploy:staging": "bun run build:staging && wrangler deploy",
		"db:generate": "dotenv -- drizzle-kit generate",
		"db:reset-local": "rm -rf .wrangler/state/v3/d1/89bb8c60-84fb-4f13-9320-e5cf623f4963 && mkdir -p .wrangler/state/v3/d1/89bb8c60-84fb-4f13-9320-e5cf623f4963",
		"db:migrate": "bun run db:reset-local && wrangler d1 migrations apply lush-content-db --local",
		"db:migrate-production": "dotenv -- drizzle-kit migrate",
		"db:seed-remote": "bun run ./scripts/run-seed.ts",
		"cf-typegen": "wrangler types",
		"typecheck": "bun run cf-typegen && react-router typegen && tsc --noEmit -p tsconfig.cloudflare.json"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@headlessui/react": "^2.2.2",
		"@heroicons/react": "^2.2.0",
		"@lexical/link": "^0.31.0",
		"@lexical/list": "^0.31.0",
		"@lexical/react": "^0.31.0",
		"@lexical/rich-text": "^0.31.0",
		"@lexical/utils": "^0.31.0",
		"@react-router/node": "^7.5.3",
		"@react-router/serve": "^7.5.3",
		"@tailwindcss/vite": "^4.1.4",
		"clsx": "^2.1.1",
		"dotenv": "^16.5.0",
		"dotenv-cli": "^8.0.0",
		"drizzle-orm": "^0.43.1",
		"drizzle-valibot": "^0.4.1",
		"framer-motion": "^12.9.7",
		"isbot": "^5.1.27",
		"lexical": "^0.31.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-dropzone": "^14.3.8",
		"react-router": "^7.5.3",
		"react-router-dom": "^7.6.0",
		"tailwind-merge": "^3.2.0",
		"tiny-invariant": "^1.3.3",
		"valibot": "^1.0.0",
		"vaul": "^1.1.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/vite-plugin": "^1.1.0",
		"@cloudflare/workers-types": "^4.20250506.0",
		"@react-router/dev": "^7.5.3",
		"@types/node": "^20.17.32",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.3",
		"@vitejs/plugin-react": "^4.4.1",
		"drizzle-kit": "^0.31.1",
		"knip": "^5.53.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.14.1"
	},
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
